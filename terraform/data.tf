# =============================================================================
# Data Sources
# =============================================================================
# Data sources for AMI lookups and availability zone information.
# =============================================================================

# -----------------------------------------------------------------------------
# Amazon Linux 2023 AMI
# -----------------------------------------------------------------------------

data "aws_ami" "amazon_linux_2023" {
  most_recent = true
  owners      = ["amazon"]

  filter {
    name   = "name"
    values = ["al2023-ami-*-x86_64"]
  }

  filter {
    name   = "architecture"
    values = ["x86_64"]
  }

  filter {
    name   = "virtualization-type"
    values = ["hvm"]
  }

  filter {
    name   = "root-device-type"
    values = ["ebs"]
  }

  filter {
    name   = "state"
    values = ["available"]
  }
}

# -----------------------------------------------------------------------------
# Availability Zone
# -----------------------------------------------------------------------------

data "aws_availability_zone" "primary" {
  name = "${var.aws_region}a"
}

# -----------------------------------------------------------------------------
# Current AWS Account
# -----------------------------------------------------------------------------

data "aws_caller_identity" "current" {}

# -----------------------------------------------------------------------------
# Current AWS Region
# -----------------------------------------------------------------------------

data "aws_region" "current" {}
