# =============================================================================
# Terraform Variables - Example Configuration
# =============================================================================
# Copy this file to terraform.tfvars and fill in your values:
#   cp terraform.tfvars.example terraform.tfvars
#
# terraform.tfvars is gitignored - your values won't be committed.
# =============================================================================

# -----------------------------------------------------------------------------
# REQUIRED - Must be set
# -----------------------------------------------------------------------------

# Your AWS Account ID (12 digits)
aws_account_id = "123456789012"

# Name of the AWS key pair for SSH access (must exist in AWS)
key_name = "your-key-pair-name"

# -----------------------------------------------------------------------------
# OPTIONAL - Have sensible defaults
# -----------------------------------------------------------------------------

# Environment name
# environment = "dev"

# Project name (used in resource naming)
# project_name = "pgha"

# AWS region
# aws_region = "us-east-1"

# VPC CIDR block
# vpc_cidr = "10.0.0.0/16"

# IP/CIDR for SSH access (use your public IP with /32 for security)
# Example: "203.0.113.50/32" for specific IP
# WARNING: "0.0.0.0/0" allows SSH from anywhere - only for testing!
# admin_ip = "0.0.0.0/0"

# EC2 instance type (t3.micro is free tier eligible for new accounts)
# instance_type = "t3.micro"

# Number of etcd instances (must be odd: 1, 3, or 5)
# etcd_instance_count = 3

# Number of Patroni/PostgreSQL instances
# patroni_instance_count = 3

# etcd version (avoid v3.5.0-3.5.2 due to data corruption bug)
# etcd_version = "v3.5.17"

# Root volume sizes in GB
# etcd_root_volume_size = 30
# patroni_root_volume_size = 30
